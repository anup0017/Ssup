<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterProfileActivity">

    <include
        android:id="@+id/new_account_app_bar"
        layout="@layout/app_bar_layout"></include>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/newregdp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/new_account_app_bar"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_image"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/colorPrimary" />

    <EditText
        android:id="@+id/newregname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/newregdp"
        android:hint="Username"
        android:inputType="textMultiLine"
        android:background="@drawable/inputs"
        android:padding="4dp"
        android:textStyle = "bold"
        android:drawableStart="@drawable/edit_profile"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp" />

    <EditText
        android:id="@+id/newregstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/newregname"
        android:hint="Status"
        android:inputType="textMultiLine"
        android:background="@drawable/inputs"
        android:padding="4dp"
        android:textStyle="bold"
        android:drawableStart="@drawable/edit_status"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp" />

    <Button
        android:id="@+id/newregupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newregstatus"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="150dp"
        android:background="@color/colorPrimaryDark"
        android:text="Create Profile"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background" />

</RelativeLayout>